---
import Layout from '../../layouts/Layout.astro';
import { forklifts as rawForklifts } from '../../data/forklifts';
import { getImagesForForklift } from '../../utils/getImages';

export async function getStaticPaths() {
  return rawForklifts.map((forklift) => ({
    params: { slug: forklift.slug },
    props: { 
      forklift: {
        ...forklift,
        images: getImagesForForklift(forklift.slug)
      }
    },
  }));
}


const { forklift } = Astro.props;
---

<Layout title={`${forklift.title} | Купить вилочный погрузчик`}>
  <div class="container mx-auto px-4 py-12">
    <a href="/#catalog" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 mb-8 transition">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
      Назад в каталог
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Галерея изображений -->
      <div>
        <div class="bg-gray-100 rounded-2xl overflow-hidden mb-4 aspect-w-4 aspect-h-3 relative group">
           {forklift.images.length > 0 ? (
             <img src={forklift.images[0]} alt={forklift.title} class="w-full h-full object-cover object-center" id="mainImage" />
           ) : (
             <div class="w-full h-full flex items-center justify-center text-gray-400">Нет фото</div>
           )}
        </div>
        
        {forklift.images.length > 1 && (
          <div class="flex gap-4 overflow-x-auto pb-4 snap-x">
            {forklift.images.map((image, index) => (
              <button 
                class="flex-shrink-0 w-24 h-24 rounded-lg overflow-hidden border-2 border-transparent hover:border-indigo-500 focus:border-indigo-500 transition cursor-pointer snap-start"
                onclick={`document.getElementById('mainImage').src = '${image}'`}
              >
                <img src={image} alt={`${forklift.title} - фото ${index + 1}`} class="w-full h-full object-cover" />
              </button>
            ))}
          </div>
        )}
      </div>

      <!-- Информация о погрузчике -->
      <div>
        <div class="flex items-center justify-between mb-4">
            <h1 class="text-3xl md:text-4xl font-black text-gray-900">{forklift.title}</h1>
            <span class="bg-green-100 text-green-800 text-sm font-bold px-3 py-1 rounded-full uppercase tracking-wide">
                {forklift.status}
            </span>
        </div>
        
        <div class="text-4xl font-black text-indigo-700 mb-8">{forklift.price}</div>

        <div class="bg-gray-50 rounded-xl p-6 mb-8 border border-gray-100">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Характеристики</h3>
          <ul class="space-y-3">
            {forklift.specs.map(spec => (
              <li class="flex items-center text-gray-700">
                <svg class="w-5 h-5 text-indigo-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                {spec}
              </li>
            ))}
          </ul>
        </div>

        <div class="mb-8">
          <h3 class="text-lg font-bold text-gray-900 mb-2">Описание</h3>
          <p class="text-gray-600 leading-relaxed">{forklift.description}</p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <a href={`https://wa.me/77017230470?text=Здравствуйте,%20меня%20интересует%20погрузчик%20${forklift.title}`} target="_blank" class="flex-1 bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-8 rounded-xl shadow-lg transition transform hover:scale-105 text-center flex items-center justify-center">
            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
            Написать в WhatsApp
          </a>
          <a href="tel:+77017230470" class="flex-1 bg-white border-2 border-gray-200 hover:border-gray-300 text-gray-700 font-bold py-4 px-8 rounded-xl transition text-center flex items-center justify-center">
             <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            Позвонить
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>