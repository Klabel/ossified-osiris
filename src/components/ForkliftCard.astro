---
interface Props {
  forklift: {
    id: number;
    title: string;
    slug: string;
    price: string;
    images: string[];
    specs: string[];
    status: string;
    description: string;
  };
}

const { forklift } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-lg overflow-hidden border border-gray-100 hover:shadow-2xl transition group">
  <a href={`/forklifts/${forklift.slug}`}>
    <div class="relative h-64 overflow-hidden">
      <img src={forklift.images[0]} alt={forklift.title} class="w-full h-full object-cover transform group-hover:scale-110 transition duration-500" />
      <div class="absolute top-4 right-4 bg-green-500 text-white text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide shadow-sm">
        {forklift.status}
      </div>
    </div>
    <div class="p-6">
      <h3 class="text-2xl font-bold text-gray-900 mb-2">{forklift.title}</h3>
      <div class="text-3xl font-black text-indigo-700 mb-6">{forklift.price}</div>
      
      <ul class="space-y-2 mb-6 text-gray-600 text-sm">
        {forklift.specs.map(spec => (
          <li class="flex items-center">
            <svg class="w-4 h-4 text-indigo-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
            {spec}
          </li>
        ))}
      </ul>
    </div>
  </a>
</div>